<style>
  body {
    margin: 0;
    padding: 0;
  }
  .head_img,
  .mobile {
    position: relative;
  }

  img {
    width: 100%;
    height: auto;
  }
  h1,
  h2 {
    text-align: center;
    color: #0a369c;
  }
  h1 {
    font-size: 20px;
    line-height: 20px;
    font-weight: 700;
    padding: 20px 20px 0px 20px;
    margin-top: 20px;
  }
  h2 {
    font-size: 14px;
    line-height: 20px;
    font-weight: 400;
    padding: 10px 20px 0px 20px;
  }

  @media (min-width: 800px) {
    h1 {
      font-size: 36px;
      margin-top: 60px;
    }
    h2 {
      font-size: 24px;
    }
  }
</style>
