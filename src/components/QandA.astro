  }

  .collapsible .icon::before {
    content: "";
    display: inline-block;
    margin-right: 10px;
    width: 15px;
    height: 15px;
    background: url("../../public/img/plus.svg") center/contain no-repeat;
  }

  .collapsible.active .icon::before {
    content: "";
    margin-right: 10px;
    width: 15px;
    height: 15px;
    background: url("../../public/img/minus.svg") center/contain no-repeat;
  }
  .collapsible {
    display: flex;
    background-color: #ffffff;
    justify-content: space-between;
    cursor: pointer;
    padding: 20px;
