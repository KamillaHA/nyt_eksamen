<!-- Styling -->
<style>
  img {
    max-width: 100%;
  }
  /* Mobil version */

  /* Tekst */
  h3 {
    font-size: 18px;
    font-weight: 700;
    line-height: 27px;
  }

  p {
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
  }

  /* Grid */
  section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1em;

    padding: 20px;
  }

  /* .B-T1 {
    grid-column: 1 / 2;
    grid-row: 1;
  } */

  .B-T2 {
    grid-column: 2 / 3;
    grid-row: 1;
  }

  .B-T3 {
    grid-column: 1 / 2;
    grid-row: 2;
  }

  /* Desktop version */
  @media (min-width: 800px) {
    /* Tekst */
    h3 {
      font-size: 24px;
      font-weight: 700;
      line-height: 36px;
    }

    p {
      font-size: 16px;
      font-weight: 400;
      line-height: 24px;
    }

    /* Grid */
    section {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 1em;

      padding: 80px;
    }

    /* .B-T1 {
      grid-column: 1 / 2;
      grid-row: 1;
    } */

    .B-T2 {
      grid-column: 2 / 3;
      grid-row: 1;
    }

    .B-T3 {
      grid-column: 3 / 4;
      grid-row: 1;
    }
  }
</style>
