---
import Farve from "../components/Farve.astro";
import Sizing from "../components/Sizing.astro";
import AddToCart from "../components/AddToCart.astro";
---

<section>
    <div class="Billede1">
      <img src="/img/storP.webp" alt="Testbillede" />
    </div>
  
    <div class="Billede2">
      <img src="/img/lilleP1.webp" alt="Testbillede" />
    </div>
  
    <div class="Billede3">
      <img src="/img/lilleP2.webp" alt="Testbillede" />
    </div>

    <div class="Billede4">
        <img src="/img/lilleP3.webp" alt="Testbillede" />
      </div>

    <div class="Billede5">
        <img src="/img/lilleP4.webp" alt="Testbillede" />
      </div>
  </section>

<h2>Sweatshirt</h2>
<p>175 kr</p>

<Farve/>
<Sizing/>
<AddToCart/>

<style>
      img {
    max-width: 100%;
    height: 100%;
    width: 100%;
  }
  section {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 5px;
    padding: 20px;
    padding-top: 30px;

  }
      h2 {
    font-size: 20px;
  }
  p {
    font-size: 14px;
  }
  h2, p {
    margin-left: 25px;
  }
  .Billede1 {
    grid-column: 1 / 5;
    grid-row: 1;
    justify-items: center;
  }

  .Billede2 {
    grid-column: 1 / 2;
    grid-row: 2;
    margin: 4px 4px 0 0;
  }

  .Billede3 {
    grid-column: 2 / 3;
    grid-row: 2;
    margin: 4px 2px 0 2px;
  }

  .Billede4 {
    grid-column: 3 / 4;
    grid-row: 2;
    margin: 4px 2px 0 2px;
  }

  .Billede5 {
    grid-column: 4 / 5;
    grid-row: 2;
    margin: 4px 0 0 4px;
  }

  @media (min-width: 800px) {
    h2 {
      font-size: 20px;
    }
    p {
      font-size: 16px;
    }
    .Billede2:hover, .Billede3:hover, .Billede4:hover {
    border: 4px solid #0A369C;
    cursor: pointer;
  }
  .Billede2, .Billede3, .Billede4 {
    border: 4px solid transparent; 
  box-sizing: border-box;
  }
  </style>