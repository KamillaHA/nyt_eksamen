---
import Farve from "../components/Farve.astro";
import Sizing from "../components/Sizing.astro";
import AddToCart from "../components/AddToCart.astro";
import Info from "../components/Info.astro";
---

<main>
  <section>
    <div class="Billede1">
      <img src="/img/storP.webp" alt="Testbillede" />
    </div>

    <div class="Billede2">
      <img src="/img/lilleP1.webp" alt="Testbillede" />
    </div>

    <div class="Billede3">
      <img src="/img/lilleP2.webp" alt="Testbillede" />
    </div>

    <div class="Billede4">
      <img src="/img/lilleP3.webp" alt="Testbillede" />
    </div>

    <div class="Billede5">
      <img src="/img/lilleP4.webp" alt="Testbillede" />
    </div>
  </section>

  <div class="desktop_info">
    <h2>Sweatshirt</h2>
    <p>175 kr</p>

    <Farve />
    <Sizing />
    <AddToCart />
    <Info />
  </div>
</main>

<style>
  img {
    max-width: 100%;
    display: block;
    width: 100%;
  }
  section {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 5px;
    padding: 20px;
    padding-top: 30px;
  }
  h2 {
    font-size: 20px;
  }
  p {
    font-size: 14px;
  }
  h2,
  p {
    margin-left: 25px;
  }
  .Billede1 {
    grid-column: 1 / 5;
    grid-row: 1;
    justify-items: center;
  }

  .Billede2 {
    grid-column: 1 / 2;
    grid-row: 2;
    margin: 4px 4px 0 0;
  }

  .Billede3 {
    grid-column: 2 / 3;
    grid-row: 2;
    margin: 4px 2px 0 2px;
  }

  .Billede4 {
    grid-column: 3 / 4;
    grid-row: 2;
    margin: 4px 2px 0 2px;
  }

  .Billede5 {
    grid-column: 4 / 5;
    grid-row: 2;
    margin: 4px 0 0 4px;
  }

  @media (min-width: 800px) {
    h2 {
      font-size: 26px;
    }
    p {
      font-size: 20px;
      margin-bottom: 60px;
    }
    main {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    }
    section {
      grid-column: 1 / 5;
      grid-row: 1;
      padding: 0;
      margin: 80px 0 80px 100px;
      align-items: center;
    }
    .Billede2:hover,
    .Billede3:hover,
    .Billede4:hover,
    .Billede5:hover {
      border: 4px solid #0a369c;
      cursor: pointer;
    }
    .Billede2,
    .Billede3,
    .Billede4,
    .Billede5 {
      border: 4px solid transparent;
      box-sizing: border-box;
      width: 45%;
      align-content: space-between;
    }
    .Billede1 {
      grid-column: 1 / 3;
      grid-row: 1 / 5;
    }
    .Billede2 {
      grid-column: 3 / 4;
      grid-row: 1;
      margin: 0 0 2px 8px;
    }
    .Billede3 {
      grid-column: 3 / 4;
      grid-row: 2;
      margin: 2px 0 2px 8px;
    }
    .Billede4 {
      grid-column: 3 / 4;
      grid-row: 3;
      margin: 2px 0 2px 8px;
    }
    .Billede5 {
      grid-column: 3 / 4;
      grid-row: 4;
      margin: 2px 0 0 8px;
    }
    .desktop_info {
      grid-column: 4 / 6;
      grid-row: 1 / 5;
      margin: 80px 80px 80px 0;
    }
  }
</style>
